#!/bin/sh
#
# ebaytoold
#
# chkconfig: - 85 15
# description: ebaytool daemon
#

PATH=/usr/local/jdk/bin:$PATH
CP=/var/www/ebaytool.jp/build/WEB-INF/classes
CP=$CP:/var/www/ebaytool.jp/build/WEB-INF/lib/*

start() {
	java -cp $CP ebaytool.apicall.Daemon start \
		>> /var/www/ebaytool.jp/logs/daemon.log &
}

stop() {
	java -cp $CP ebaytool.apicall.Daemon stop
	ps auxw | grep java | grep Daemon
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		stop
		start
		;;
	*)
		echo $"Usage: $prog {start|stop|restart}"
esac
